<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="posts">
    <% @posts.each do |post| %>
      <%= render :partial => 'display', :locals => {:post => post} %>
    <% end %>
  </tbody>
</table>

<br>

<hr/>

<h1>New post</h1>

<%= render 'form' %>
<%#= link_to 'New Post', new_post_path %>
